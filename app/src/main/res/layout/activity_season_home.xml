<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ui.SeasonHomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:background="@null"
        app:elevation="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:id="@+id/statusIconsVG"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/searchicon"/>
                <ImageView
                    android:id="@+id/bell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bell"/>
                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notification"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_menu_black"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_toEndOf="@id/menuIcon"
                android:layout_toStartOf="@id/statusIconsVG"
                android:textStyle="normal"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/filterVG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/appBar">

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:text="@string/products"
            android:textSize="14sp"

            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:padding="2dp"
            android:elevation="3dp"
            android:background="@drawable/spinner_icon"
            android:entries="@array/products_lists"
            style="@style/Widget.AppCompat.Spinner.Underlined"

            />
        <ImageView
            android:id="@+id/filter"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:elevation="5dp"
            android:padding="3dp"

            android:scaleType="center"
            app:srcCompat="@drawable/filternew"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterVG"
        android:weightSum="4"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dressBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:text="Dress"
            android:layout_marginEnd="3dp"

            android:background="@null"
            style="@style/buttonTextAppearance"/>
        <Button
            android:id="@+id/pantsBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_height="43dp"
            android:background="@null"
            android:text="Pants"
            style="@style/buttonTextAppearance"/>

        <Button
            android:id="@+id/blazersBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_height="43dp"
            android:text="Blazers"
            android:background="@null"
            style="@style/buttonTextAppearance"/>

        <Button
            android:id="@+id/jacketBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:layout_height="43dp"
            android:text="Jackets"
            android:background="@null"
            style="@style/buttonTextAppearance"/>
    </LinearLayout>


